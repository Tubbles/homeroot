{
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    },
    "[rust]": {
        "editor.defaultFormatter": "matklad.rust-analyzer"
    },
    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "C_Cpp.formatting": "clangFormat",
    "clang-format.fallbackStyle": "WebKit",
    "clang-format.language.c.fallbackStyle": "WebKit",
    "clang-format.language.cpp.fallbackStyle": "WebKit",
    "cmake.configureOnOpen": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.wordWrap": "on",
    "editor.copyWithSyntaxHighlighting": false,
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.rulers": [
        120
    ],
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.tabSize": 4,
    "editor.wordWrapColumn": 120,
    "explorer.autoReveal": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.copyRelativePathSeparator": "/",
    "files.associations": {
        "*.bb": "bitbake",
        "*.bbappend": "bitbake",
        "*.inc": "python",
        "*.ln": "linkerscript",
        "*.tt": "csharp",
        "*.m": "matlab",
        "*.json": "jsonc"
    },
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "python.formatting.autopep8Args": [
        "--max-line-length=120"
    ],
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=120"
    ],
    "reflow.preferredLineLength": 120,
    "reflowMarkdown.preferredLineLength": 120,
    "restructuredtext.linter.doc8.extraArgs": [
        "--max-line-length",
        "120"
    ],
    "security.workspace.trust.untrustedFiles": "open",
    // "window.title": "${dirty}${rootName}${separator}${activeEditorLong}${separator}${appName}",
    "window.title": "${rootName}${separator}${rootPath}${separator}${appName}",
    "window.titleSeparator": " -  ",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.startupEditor": "none",
    "zenMode.hideLineNumbers": false,
    "zenMode.restore": false,
    "rewrap.wrappingColumn": 120,
    "C_Cpp.default.cppStandard": "c++17",
    "debug.onTaskErrors": "abort",
    "window.menuBarVisibility": "compact",
    "window.titleBarStyle": "custom",
    "window.customMenuBarAltFocus": false,
}
