    # /mnt/c/Users/*/AppData/Local/Programs/Git/cmd
    # /mnt/c/Users/*/AppData/Local/Programs/Python/Launcher/
    # /mnt/c/Users/*/AppData/Local/Programs/Python/Python310/
    # /mnt/c/Users/*/AppData/Local/Programs/Python/Python310/Scripts/
    # /mnt/c/WINDOWS/System32/OpenSSH/
