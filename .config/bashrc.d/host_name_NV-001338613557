    __append_dir_to_path_smart "/c/Users/JohanEriksson/AppData/Local/Programs/Microsoft VS Code/bin"
elif [[ "$(uname -a)" == *"WSL2"* ]]; then
    alias nv='cd /mnt/c/Users/JohanEriksson/NV/SW/BMS'
    # TODO : Remove windows centric stuff here
